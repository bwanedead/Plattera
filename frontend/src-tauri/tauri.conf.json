{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Plattera",
  "version": "0.9.4",
  "identifier": "com.plattera.app",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Plattera - Legal Property Visualization",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "maximized": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/icon_512.png",
      "icons/icon.ico"
    ],
    "externalBin": [
      "bin/plattera-backend"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "dialog": false,
      "endpoints": [
        "https://raw.githubusercontent.com/bwanedead/Plattera/main/releases/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDg4MEJCNzEzNkQ1NjhEREQKUldUZGpWWnRFN2NMaU04eXJ5UUpBanlCWmpvenZPMGd1TC8yNWY5OEdFVEc2TTlaZ3lLdUdMS1QK"
    }
  }
}
